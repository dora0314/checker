@model TeacherViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <title>Личный кабинет</title>
    <link rel="stylesheet" href="~/css/techer.profile.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="icon" href="/Files/images/icon.svg" type="image/svg">
</head>
<body>
    <header>
        <p class="header">Личный кабинет</p>
    </header>
    <main>
        <div class="info">
            <p class="name">@Model.FullName</p>
            <p class="role">Преподаватель</p>
            <p class="mail">Аккаунт: <a class="teacher_mail">@Model.Email</a></p>
        </div>

        <article class="main_section">
            <div class="tabs">
                <div class="tabs__nav">
                    <a class="tabs__link left tabs__link_active" href="#_TeacherGroups">Группы</a>
                    <a class="tabs__link right" href="#_TeacherCourses">Курсы</a>
                </div>
                <div class="tabs__content" data-id=@Model.Id>
                    <div class="tabs__pane tabs__pane_show" id="_TeacherGroups">
                        <button id="createStudentsGroupButton">Создать</button>
                        <br />

                        @foreach (var group in Model.StudentsGroups)
                        {
                            <div class="container">
                                <a href=@group.DetailUrl class="element">@group.Title</a>
                            </div>
                        }
                    </div>
                    <div class="tabs__pane" id="_TeacherCourses">
                        <button id="createCourseButton">Создать</button>
                        <br />

                        @foreach (var course in Model.Courses)
                        {
                            <div class="container">
                                <a href=@course.DetailUrl class="element">@course.Title</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </article>

        <div id="popupWin" class="formWindow">

        </div>

        <script>
            var userId = @Model.Id;
        </script>

        <script src="~/js/teacher.lk.js"></script>
    </main>
    <footer>
        <article class="contacts">
            <a href="https://vk.com/dorapomodora" class="contacts_button" target="_blank">Написать администратору</a>
        </article>
    </footer>
</body>
</html>